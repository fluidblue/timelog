{
  "name": "timelog",
  "version": "0.0.0",
  "private": true,
  "description": "TimeLog is a desktop application allowing you to track your time",
  "scripts": {
    "start": "npm-run-all -p ng:start electron:start",
    "package": "npm run build && npm run electron-forge:package",
    "make": "npm run build && npm run electron-forge:make",
    "build": "npm run ng:build && npm run electron:build",
    "electron:build": "tsc -p tsconfig.electron.json",
    "electron:watch": "tsc -p tsconfig.electron.json -w",
    "electron:lint": "eslint -c .eslintrc --ext .ts ./src",
    "electron:start": "npm run electron:build && electron ./dist/main.js",
    "ng": "ng",
    "ng:start": "ng serve",
    "ng:build": "ng build",
    "ng:watch": "ng build --watch --configuration development",
    "ng:test": "ng test",
    "electron-forge:start": "electron-forge start",
    "electron-forge:package": "electron-forge package",
    "electron-forge:make": "electron-forge make"
  },
  "main": "./dist/main.js",
  "author": "fluidblue",
  "license": "GPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "https://github.com/fluidblue/timelog"
  },
  "dependencies": {
    "@angular/animations": "~13.2.0",
    "@angular/common": "~13.2.0",
    "@angular/compiler": "~13.2.0",
    "@angular/core": "~13.2.0",
    "@angular/forms": "~13.2.0",
    "@angular/localize": "~13.2.0",
    "@angular/platform-browser": "~13.2.0",
    "@angular/platform-browser-dynamic": "~13.2.0",
    "@angular/router": "~13.2.0",
    "@ng-bootstrap/ng-bootstrap": "^11.0.0",
    "bootstrap": "^4.6.0",
    "bootstrap-icons": "^1.8.0",
    "electron-squirrel-startup": "^1.0.0",
    "rxjs": "~7.5.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~13.2.0",
    "@angular/cli": "~13.2.0",
    "@angular/compiler-cli": "~13.2.0",
    "@electron-forge/cli": "^6.0.0-beta.63",
    "@electron-forge/maker-deb": "^6.0.0-beta.63",
    "@electron-forge/maker-rpm": "^6.0.0-beta.63",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.63",
    "@electron-forge/maker-zip": "^6.0.0-beta.63",
    "@types/jasmine": "~3.10.0",
    "@types/node": "^12.20.47",
    "electron": "^17.1.2",
    "jasmine-core": "~4.0.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.1.0",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "~1.7.0",
    "npm-run-all": "^4.1.5",
    "typescript": "~4.5.2"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "@fluidblue/timelog"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
